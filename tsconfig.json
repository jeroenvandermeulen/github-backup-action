{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,  // Allow importing modules with a default export from modules with no default export
      // "allowImportingTsExtensions": true,
      // "noEmit": true,
      "allowJs": true,                        // Allow importing and using JavaScript files
      "experimentalDecorators": true,         // Enable experimental decorators
      "types": [
          "@types/node",
          "jest",
      ],
      "outDir": "build",                      // Output directory for transpiled files
      "target": "ESNext",                     // Target the latest ECMAScript version
      "moduleResolution": "Node",             // Use Node.js module resolution
  
      // Type Checking and Strictness
      "noImplicitThis": true,                 // Raise error on "this" expressions with an implied "any" type
      "strictNullChecks": true,               // Enable strict null checks to catch potential null/undefined errors
      "resolveJsonModule": true,              // Allow importing JSON modules
      "downlevelIteration": true,             // Emit code compatible with ES5 and ES3
      "baseUrl": ".",                         // Base URL for module resolution
  
      // Module and Output Options
      "module": "esnext",                     // Use ES modules
      "strict": true,                         // Enable strict type checking
      "declaration": false,                   // Don't generate declaration files
      "removeComments": true,                 // Remove comments from output
      "sourceMap": false,                     // Disable source maps for smaller output
      "esModuleInterop": true,                // Enable default import syntax
      "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
  
      // Additional optimization options
      "noUnusedLocals": true,                 // Report unused variables
      "noUnusedParameters": true,             // Report unused function parameters
  
      // Advanced optimization options
      "skipLibCheck": true,                   // Skip type checking of declaration files
  
      // Path Mapping
      "paths": {
          "@/*": [
              "*"
          ]
      }
  }
}
